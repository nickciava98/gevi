<?xml version="1.0" encoding="UTF-8"?>
<openerp>
    <data>
        <record model="ir.ui.view" id="wizard_assegna_agente_form_view">
            <field name="name">gevi_zupdate20170530.assegna_agente.form</field>
            <field name="model">gevi_zupdate20170530.wizard_assegna_agente</field>
            <field name="arch" type="xml">
                <form string="Assegna Agente">
                    <div>Scegliere l'agente da assegnare agli amministratori selezionati.</div>
                    <group>
                        <field name="agente_id" options="{'no_quick_create': True, 'no_create_edit': True, 'no_open': True}"/>
                    </group>
                    <footer>
                        <button name="assegna_agente" type="object"
                                string="Assegna" class="oe_highlight" groups=""/>
                        <button special="cancel" string="Cancella"/>
                    </footer>
                </form>
            </field>
        </record>

        <act_window id="action_lancia_wizard_assegna_agente"
                    name="Assegna Agente"
                    src_model="gevi_contatti.referente"
                    res_model="gevi_zupdate20170530.wizard_assegna_agente"
                    view_mode="form"
                    target="new"
                    key2="client_action_multi"/>
    </data>
</openerp>