<openerp>
  <data>
  
    <!-- actions opening views on Anagrafica Bilancia -->
    <record model="ir.actions.act_window" id="gevi_bilance.action_window_applicazione_anagrafica">
      <field name="name">Gevi Bilance Anagrafica Window</field>
      <field name="res_model">gevi_bilance.anagrafica</field>
      <field name="view_mode">tree,form</field>
    </record>
	
	<!-- Anagrafica Bilancia Tree -->
    <record model="ir.ui.view" id="gevi_bilance.anagrafica_view_tree">
      <field name="name">Anagrafica Bilancia Tree</field>
      <field name="model">gevi_bilance.anagrafica</field>
      <field name="arch" type="xml">
        <tree>
		  <field name="name"/>
          <field name="costruttore"/>
		  <field name="modello"/>
		  <field name="matricola"/>
        </tree>
      </field>
    </record>
	
	<!-- Anagrafica Bilancia Form -->
    <record model="ir.ui.view" id="gevi_bilance.anagrafica_view_form">
      <field name="name">Anagrafica Bilancia Form</field>
      <field name="model">gevi_bilance.anagrafica</field>
      <field name="arch" type="xml">
        <form string="Anagrafica Bilancia Form">
		  <group>	
			<field name="costruttore"/>
			<field name="modello"/>
			<field name="matricola"/>
			<field name="name"/>
			<field name="numscale"/>
			<field name="tipo_bilancia_id"/>
			<field name="classe_bilancia_id" widget="selection" />
			<field name="punti_di_supporto"/>
		  </group>
        </form>
      </field>
    </record>
	
  </data>
</openerp>