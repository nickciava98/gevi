<openerp>
  <data>
    <!-- explicit list view definition -->
    
	<!-- Verifica Tree -->
    <record model="ir.ui.view" id="gevi_bilance.view_tree">
      <field name="name">Verifica Bilancia Tree</field>
      <field name="model">gevi_bilance.verifica</field>
      <field name="arch" type="xml">
        <tree>
          <field name="nomeVerifica"/>
          <field name="numVerifica"/>
          <field name="description"/>
        </tree>
      </field>
    </record>
	
	<!-- Verifica Form -->
    <record model="ir.ui.view" id="gevi_bilance.view_form">
      <field name="name">Verifica Bilancia Form</field>
      <field name="model">gevi_bilance.verifica</field>
      <field name="arch" type="xml">
        <form string="Verifica Bilancia Form">
		  <group>	
			<field name="nomeVerifica"/>
			<field name="numVerifica"/>
			<field name="description"/>
			<field name="anagrafica_id"/>
		  </group>
        </form>
      </field>
    </record>

