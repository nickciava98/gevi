<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!--Form Classe pesiera -->
       	<record model="ir.ui.view" id="view_gevi_zbilance_classe_pesiera_form">
			<field name="name">Classe pesiera</field>
			<field name="model">gevi_zbilance.classe_pesiera</field>
			<field name="arch" type="xml">
				<form string="Classe pesiera Form">
					<sheet>
                        <group>
                            <field name="name" default_focus="1" />
                        </group>
					</sheet>
				</form>
			</field>
		</record>

        <!--Action Classe pesiera -->
        <record model="ir.actions.act_window" id="action_gevi_zbilance_classe_pesiera_form">
            <field name="name">Classe bilancia</field>
            <field name="res_model">gevi_zbilance.classe_pesiera</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="oe_view_nocontent_create">Inserisci Classe pesiera
                </p>
            </field>
        </record>

        <!--Tree Classe pesiera -->
        <record model="ir.ui.view" id="gevi_zbilance_classe_pesiera_tree">
            <field name="name">Classe pesiera</field>
            <field name="model">gevi_zbilance.classe_pesiera</field>
            <field name="arch" type="xml">
                <tree string="Lista classe pesiera">
                    <field name="name" />
                </tree>
            </field>
        </record>

    </data>
</odoo>
