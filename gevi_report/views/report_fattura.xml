<?xml version="1.0" encoding="utf-8"?>
<openerp>
    <data>
        <template id="gevi_report.report_fattura">            
            <t t-name="gevi_report.report_fattura">
                <t t-call="gevi_report.html_container">
                    <t t-foreach="docs" t-as="o">
                        <t t-call="gevi_report.external_layout2">
                            <div class="page">
                                
                                <div class="row">
                                    <div class="col-xs-12">
<!-- IN CASO DI DATI INTESTAZIONE FATTURA IN TUTTE LE PAGINE TAGLIARE A PARTIRE DA QUESTO COMMENTO -->
                                        <table class="table table-bordered table-responsive tablepad">
                                            <tbody>
                                                <tr>
                                                    <td width="50%">
                                                        <p>
                                                            <strong>Spett.</strong>
                                                        </p>
                                                        <p>
                                                            <span t-field="o.partner_id.name"/>
                                                            <br/><span t-field="o.partner_id.street"/>
                                                            <br/><span t-field="o.partner_id.zip"/>, <span t-field="o.partner_id.city"/> <span t-field="o.partner_id.provincia"/>
                                                        </p>
                                                    </td>
                                                    <td width="50%">
                                                        <p>
                                                            <strong>Destinatario</strong>
                                                        </p>
                                                        <p>
                                                            <span t-field="o.partner_id.referente_id.name"/>
                                                            <br/><span t-field="o.partner_id.referente_id.indirizzo"/>
                                                            <br/><span t-field="o.partner_id.referente_id.cap"/>, <span t-field="o.partner_id.referente_id.citta"/> <span t-field="o.partner_id.referente_id.provincia"/>
                                                        </p>
                                                    </td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>
                                </div>

                                <div class="row">
                                    <div class="col-xs-7">                                        
                                    </div>
                                    <div class="col-xs-5">                                                                        
                                        <table class="table table-bordered table-responsive">
                                            <tbody>
                                                <tr>
                                                    <td width="35%" align="center">Fattura
                                                        <t t-if="o.partner_id.split_payment == 1">
                                                            Split Payment
                                                        </t>
                                                    </td>
                                                    <td width="15%" align="center">Data</td>
                                                </tr>
                                                <tr>
                                                    <td align="center"><strong><span t-field="o.number"/></strong></td>
                                                    <td align="center"><strong><span t-field="o.date_invoice"/></strong></td>
                                                </tr>
                                            </tbody>
                                        </table>
                                    </div>                                                                           
                                </div>

                                <table class="table table-bordered table-responsive notablepad">
                                    <tbody>
                                        <tr style="letter-spacing: 1px;">
                                            <td style="font-size:8pt"><font size="0.43em">Divisa</font> <strong><font size="0.6em"> EUR</font> </strong></td>
                                            <td style="font-size:8pt"><font size="0.43em">Cod.Contabile</font><strong> <span t-field="o.partner_id.codice_contabile"/></strong></td>
                                            <td style="font-size:8pt"><font size="0.43em">Cod.Cliente</font><strong> <span t-field="o.partner_id.codice_cliente"/></strong></td>
                                            <td colspan="2" style="font-size:8pt"><font size="0.43em">P.Iva</font><strong> <span t-field="o.partner_id.piva"/></strong> </td>
                                            <td colspan="2" style="font-size:8pt"><font size="0.43em">Codice Fiscale</font> <strong> <span t-field="o.partner_id.cf"/></strong></td>
                                        </tr>
                                        <tr>
                                            <td colspan="2" style="border-right: 0px">
                                                <font size="0.43em">PAGAMENTO</font> <br/>
                                                <!--<font size="0.43em">BANCA D'APPOGGIO</font><br/>--> 
                                                <font size="0.43em">BANCA PER BONIFICO</font><br/>
                                                <font size="0.43em">IBAN</font>
                                            </td> 
                                            
                                            <td colspan="4" style="border-left: 0px">
                                                <span t-field="o.payment_term_id"/><br/>
                                                <!---<br/>-->
                                                <!--<span t-field="o.banca_id.bank_name"/><br/>
                                                <span t-field="o.banca_id.acc_number"/>-->
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
<!-- IN CASO DI DATI INTESTAZIONE FATTURA IN TUTTE LE PAGINE TAGLIARE FINO A QUESTO COMMENTO -->
                                <!-- Nota Split-Payment e CIG--> 
                                <table t-if="o.partner_id.split_payment == 1 or o.codice_cig != 0" class="table table-condensed">
                                    <tbody class="table table-bordered table-responsive">
                                        <tr>
                                            <td>
                                                <t t-if="o.partner_id.split_payment == 1">
                                                    Scissione dei pagamenti (art.17/ter DPR 633/72 introdotto dal comma 629 art. unico legge stabilita' 2015)
                                                    <br/>
                                                </t>
                                                <t t-if="o.codice_cig != 0">
                                                    Codice CIG: <span t-field="o.codice_cig"/><span style="margin-left:2%"> Codice IPA: <span t-field="o.partner_id.codice_ipa"/></span>
                                                </t>
                                            </td>
                                        </tr> 
                                    </tbody>
                                </table>                                    
                                <t t-set="display_discount" t-value="any([l.discount for l in o.invoice_line_ids])"/>

                                <table class="table table-condensed">
                                    <thead>
                                        <tr>
                                            <th>Descrizione</th>
                                            <th width="4%" class="text-right">Qtà</th>
                                            <th width="12%" class="text-right">Prezzo U.</th>
                                            <th t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">Sconto(%)</th>
                                            <th width="12%" class="text-right">Importo</th>
                                            <th width="6%" class="text-right">IVA</th>
                                        </tr>
                                    </thead>
                                    <tbody class="invoice_tbody">
                                        <tr t-foreach="o.invoice_line_ids" t-as="l">
                                            <td><span t-field="l.name"/></td>
                                            <td class="text-right">
                                                <span t-esc="'%.0f'%(l.quantity)"/>
                                                <span t-field="l.uom_id"  groups="product.group_uom"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="l.price_unit"/> €
                                            </td>
                                            <td t-if="display_discount" class="text-right" groups="sale.group_discount_per_so_line">
                                                <span t-field="l.discount"/>
                                            </td>
                                            <td class="text-right">
                                                <span t-field="l.price_subtotal" 
                                                    t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                                            </td>
                                            <td class="text-right">
                                                <t t-foreach="o.tax_line_ids" t-as="t">
                                                    <t t-if="t.tax_id.description != '4r'">
                                                        <span t-field="t.tax_id.description"/>                                                     
                                                    </t>
                                                </t>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>

                          </div>
                       </t>
                    </t>
                </t>
            </t>                    
        </template>
    </data>
</openerp> 