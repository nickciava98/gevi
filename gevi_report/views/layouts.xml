    <!-- Template footer per fattura -->
    <template id="external_layout_footer2">
        <div class="footer">

            <br/>
            <div class="row">
                <div class="col-xs-5">
                    <table class="table table-condensed">
                        <thead>
                            <tr class="border-black">
                                <th>Cod.Iva</th>
                                <th class="text-right">Imponibile</th>
                                <th class="text-right">Al.Iva</th>
                                <th class="text-right">Imposta</th>
                            </tr>
                        </thead>
                        <tr>
                            <td>
                                <t t-foreach="o.tax_line_ids" t-as="t">
                                    <t t-if="t.tax_id.description != '4r'">
                                        <span class="last-page" t-field="t.tax_id.description"/>
                                    </t>
                                </t>
                            </td>

                            <td class="text-right">
                                <span class="last-page" t-field="o.amount_untaxed"
                                      t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                            <td class="text-right">
                                <t t-set="tassa" t-value="0.00"/>
                                <t t-foreach="o.tax_line_ids" t-as="t">
                                    <t t-if="t.tax_id.description != '4r'">
                                        <t t-set="tassa" t-value="t.tax_id.amount"/>
                                        <span class="last-page" t-esc="'%.0f'%(tassa)"/>
                                        <span class="last-page">%</span>
                                    </t>
                                </t>
                            </td>

                            <t t-set="imposte" t-value="0.00"/>
                            <t t-foreach="o.tax_line_ids" t-as="t">
                                <t t-if="t.tax_id.description != '4r'">
                                    <t t-set="imposte" t-value="imposte+t.amount"/>
                                    <td class="text-right">
                                        <span class="last-page" t-esc="'%.2f'%(imposte)"
                                              t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>
                                        <span class="last-page">€</span>
                                    </td>
                                </t>
                            </t>
                        </tr>
                    </table>
                    <br/>
                    <table class="table table-condensed">
                        <tr class="border-black">
                            <td>
                                <strong>Scadenza</strong>
                            </td>
                            <td class="text-right">
                                <span class="last-page" t-field="o.date_due"/>
                            </td>
                        </tr>
                    </table>
                </div>
                <div class="col-xs-3">
                </div>
                <div class="col-xs-4 pull-right">
                    <table class="table table-condensed">
                        <tr class="border-black">
                            <td>
                                <strong>Totale Imponibile</strong>
                            </td>
                            <td class="text-right">
                                <span class="last-page" t-field="o.amount_untaxed"
                                      t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                        </tr>
                        <tr>
                            <td>
                                <strong>Totale Iva</strong>
                            </td>
                            <t t-set="imposte" t-value="0.00"/>
                            <t t-foreach="o.tax_line_ids" t-as="t">
                                <t t-if="t.tax_id.description != '4r'">
                                    <t t-set="imposte" t-value="imposte+t.amount"/>
                                    <td class="text-right">
                                        <span class="last-page" t-esc="'%.2f'%(imposte)"
                                              t-field-options="{&quot;widget&quot;: &quot;monetary&quot;, &quot;display_currency&quot;: &quot;o.currency_id&quot;}"/>
                                        <span class="last-page">€</span>
                                    </td>
                                </t>
                            </t>
                        </tr>
                        <tr>
                            <td>
                                <strong>Totale Fattura</strong>
                            </td>
                            <td class="text-right">
                                <span class="last-page" t-esc="'%.2f'%(imposte+o.amount_untaxed)"/>
                                <span class="last-page">€</span>
                            </td>
                        </tr>
                        <t t-foreach="o.tax_line_ids" t-as="r">
                            <t t-if="r.tax_id.description == '4r'">
                                <tr>
                                    <td>
                                        <strong>Ritenuta acconto 4%</strong>
                                    </td>
                                    <td style="text-align:right">
                                        <t t-set="ritentute" t-value="0.00"/>
                                        <t t-set="ritenute" t-value="r.amount"/>
                                        <span class="last-page" t-esc="'%.2f'%(abs(ritenute))"/>
                                        <span class="last-page">€</span>
                                    </td>
                                </tr>
                            </t>
                        </t>
                        <tr class="border-black">
                            <td>
                                <strong>Netto a Pagare</strong>
                            </td>
                            <td class="text-right">
                                <span class="last-page" t-field="o.amount_total"
                                      t-field-options='{"widget": "monetary", "display_currency": "o.currency_id"}'/>
                            </td>
                        </tr>
                    </table>
                    <br/>
                </div>
            </div>

            <div class="row">
                <div class="col-xs-7" style="letter-spacing: 1px;">
                    <span style="text-align:left; font-weight:bold; font-size:12px;">ICOVER - ISTITUTO COLLAUDI
                        VERIFICHE E RICERCHE S.r.l. a s.u.
                    </span>
                    <br/>
                    <span style="text-align:left; font-size:10px;">Sede Legale: Piazza Irnerio, 68 - 00165 ROMA
                        <br/>www.icoversrl.it - email:info@icoversrl.it
                    </span>
                </div>
                <div class="col-xs-2">
                    <p>
                        <br/>
                        <img alt="Numero Verde" src="/gevi_report/static/src/img/numero-verde.png"/>
                    </p>
                </div>
                <div class="col-xs-3" style="text-align:right; font-size:10px; letter-spacing: 1px;">
                    <span>P.IVA 02860290788
                        <br/>
                        Cap. Soc. € 100.000,00 i.v.
                        <br/>
                        Registro delle Imprese di Roma
                        <br/>
                        R.E.A. n. 1185570
                    </span>
                </div>
            </div>
            <div style="text-align:center; font-size:10px;">
                <ul class="list-inline">
                    <li>Pagina:</li>
                    <li>
                        <span class="page"/>
                    </li>
                    <li>/</li>
                    <li>
                        <span class="topage"/>
